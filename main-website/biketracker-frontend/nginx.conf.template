server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    location /styles {
      proxy_set_header Host $http_host;
      proxy_pass  ${MAPTILER_URL};
    }
    location /data {
      proxy_set_header Host $http_host;
      proxy_pass  ${MAPTILER_URL};
    }
    location /fonts {
      proxy_set_header Host $http_host;
      proxy_pass  ${MAPTILER_URL};
    }
}